doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous")
  body.container-fluid
    block nav
    if !user
      nav.navbar.navbar-expand(data-bs-theme="light" role="navigation")
        div.container-md
          a.navbar-brand(href="/") Clubhouse
          ul.navbar-nav.gap-1
            li.nav-item.my-auto 
              a.nav-link(href="/chat") Chat
            li.nav-item 
              a.nav-link(href="/sign-up")
                button.btn.btn-outline-success(type="button") Sign Up
            li.nav-item 
              a.nav-link.btn(href="/sign-in")
                button.btn.btn-success(type="button") Sign In
    else
      nav.navbar.navbar-expand(data-bs-theme="light" role="navigation")
        div.container-md
          a.navbar-brand(href="/") Clubhouse
          ul.navbar-nav.gap-1
            li.nav-item.my-auto 
              a.nav-link(href="/chat") Chat
            li.nav-item.my-auto 
              span.navbar-text Hello #{user.fname}!
            li.nav-item 
              a.nav-link(href="/log-out")
                button.btn.btn-outline-danger(type="button") Log Out
    div.container
      block content
